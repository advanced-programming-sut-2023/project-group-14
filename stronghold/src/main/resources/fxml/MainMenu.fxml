<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
			xmlns:fx="http://javafx.com/fxml"
			fx:controller="stronghold.view.MainMenu"
			stylesheets="@../css/style.css"
			styleClass="Background"
			prefHeight="400.0" prefWidth="600.0">

	<center>
		<VBox alignment="CENTER" spacing="20">
			<Label text="Main Menu" styleClass="menu-label" textFill="white"/>
			<Button text="Start Game" onMouseClicked="#startGameButtonHandler"/>
			<Button text="Profile" onMouseClicked="#profileButtonHandler"/>
			<Button text="Map Management" onMouseClicked="#mapManagementButtonHandler"/>
			<Button text="Logout" onMouseClicked="#logoutButtonHandler"/>
			<Button text="Exit" onMouseClicked="#exitButtonHandler"/>
			<Label text="" styleClass="error-text" fx:id="errorText"/>
		</VBox>
	</center>

</BorderPane>
